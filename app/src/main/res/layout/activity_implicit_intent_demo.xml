<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImplicitIntentDemo"
    android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_login"/>

    <ScrollView
        android:layout_width="396dp"
        android:layout_height="451dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="234dp"
        android:layout_marginBottom="-81dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/button"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="OPEN WEBSITE" />

            <Button
                android:id="@+id/googlemapbtn"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="OPEN GOOGLE MAP" />


            <Button
                android:id="@+id/button6"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="Camera" />

            <Button
                android:id="@+id/button7"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="DISPLAY CONTACTS" />

            <Button
                android:id="@+id/button2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="OPEN GITHUB" />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        app:srcCompat="@drawable/newnewlogo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/formLogo"
        android:layout_gravity="center"
        android:layout_marginBottom="-34dp"
        android:paddingStart="90dp"
        android:paddingLeft="530dp"
        android:paddingTop="140dp"
        android:text="Prime's Implicit Intent"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>